@model IEnumerable<PwaUai2019.Web.Models.Cursada>

@{
    ViewData["Title"] = "Cursadas";
}
<div class="text-center">
    <h1 class="jumbotron-heading">Cursadas</h1>
</div>
<div class="d-flex p-2">
    <p class="p-2">
        <a class="btn btn-info" asp-action="Create">Crear nueva</a>
    </p>
    <p class="p-2">
        <a class="btn btn-info" asp-action="Assign">Asignar aulas</a>
    </p>
    <p class="p-2">
        <a class="btn btn-info" asp-action="GetNoAula">Cursadas sin aula</a>
    </p>
</div>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Materia)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Carrera)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CantidadAlumnos)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Comision)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Aula)
            </th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Materia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrera)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.CantidadAlumnos)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Turno)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Dia)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Comision)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Aula.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles ", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>