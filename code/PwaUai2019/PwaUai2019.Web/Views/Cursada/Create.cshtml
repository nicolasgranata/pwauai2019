@model PwaUai2019.Web.ViewModels.CursadaCreateViewModel

@{
    ViewData["Title"] = "Crear Cursada";
}

<h1>Crear</h1>

<h4>Cursada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cursada.Materia" class="control-label"></label>
                <input asp-for="Cursada.Materia" class="form-control" />
                <span asp-validation-for="Cursada.Materia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cursada.Carrera" class="control-label"></label>
                <input asp-for="Cursada.Carrera" class="form-control" />
                <span asp-validation-for="Cursada.Carrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cursada.CantidadAlumnos" class="control-label"></label>
                <input asp-for="Cursada.CantidadAlumnos" class="form-control" />
                <span asp-validation-for="Cursada.CantidadAlumnos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cursada.Turno" class="control-label"></label>
                <select asp-for="Cursada.Turno" class="form-control"
                        asp-items="@(new SelectList(Model.Turnos))">
                    <option class="form-control">Seleccione un turno</option>
                </select>
                <span asp-validation-for="Cursada.Turno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cursada.Dia" class="control-label"></label>
                <select asp-for="Cursada.Dia" class="form-control"
                        asp-items="@(new SelectList(Model.Dias))">
                    <option class="form-control">Seleccione un día</option>
                </select>
                <span asp-validation-for="Cursada.Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cursada.Horario" class="control-label"></label>
                <input asp-for="Cursada.Horario" class="form-control" />
                <span asp-validation-for="Cursada.Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cursada.Comision" class="control-label"></label>
                <input asp-for="Cursada.Comision" class="form-control" />
                <span asp-validation-for="Cursada.Comision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cursada.Aula" class="control-label"></label>
                <select asp-for="Cursada.Aula" class="form-control"
                        asp-items="@(new SelectList(Model.AulasDisponibles, "Id", "Nombre"))">
                    <option class="form-control">Seleccione un aula</option>
                </select>
                <span asp-validation-for="Cursada.Aula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al listado</a>
</div>

